<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="org.admin.pkg.ShoppingPointServer.models.CustomerOrders" lazy="false" table="CUSTOMERORDERS">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="primaryKey" type="string" unsaved-value="null" >
            <column name="PRIMARY_KEY" sql-type="char(36)" not-null="true"/>
            <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
        
        <property name="ordernumber">
            <column name="ORDERNUMBER" sql-type="text" not-null="true"/>
        </property>
        
        <property name="producttype">
            <column name="PRODUCTTYPE" sql-type="text" not-null="true"/>
        </property>
        
        <property name="generalname">
            <column name="GENERALNAME" sql-type="text" not-null="true"/>
        </property>

		<property name="specificname">
            <column name="SPECIFICNAME" sql-type="text" not-null="true"/>
        </property>
        
        <property name="productnumber">
            <column name="PRODUCTNUMBER" sql-type="text" not-null="true"/>
        </property>
        
        <property name="quantity">
            <column name="QUANTITY" sql-type="text" not-null="true"/>
        </property>
        
        <property name="price">
            <column name="PRICE" sql-type="text" not-null="true"/>
        </property>
        
        <property name="counter">
            <column name="COUNTER" sql-type="integer" not-null="true"/>
        </property>
        
        <property name="resetTime" type="timestamp">
            <column name="RESET_TIME" sql-type="timestamp" not-null="true" />
        </property>
        
        <many-to-one name="customer" class="org.admin.pkg.ShoppingPointServer.models.Customer" fetch="select">
            <column name="CUSTOMER_ID_FK" not-null="true" />
        </many-to-one>
        
    </class>
</hibernate-mapping>
