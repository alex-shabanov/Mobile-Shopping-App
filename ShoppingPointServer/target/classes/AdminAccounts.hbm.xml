<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="org.admin.pkg.ShoppingPointServer.models.AdminAccounts" lazy="false" table="ADMINACCOUNTS">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="primaryKey" type="string" unsaved-value="null" >
            <column name="PRIMARY_KEY" sql-type="char(36)" not-null="true"/>
            <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>
        
        <property name="adminname">
            <column name="ADMINNAME" sql-type="varchar(25)" not-null="true"/>
        </property>

        <property name="adminpassword">
            <column name="ADMINPASSWORD" sql-type="text" not-null="true"/>
        </property>
        
        <property name="loginstatus">
            <column name="LOGINSTATUS" sql-type="text" not-null="true"/>
        </property>
                   
        <property name="counter">
            <column name="COUNTER" sql-type="integer" not-null="true"/>
        </property>
        
        <property name="resetTime" type="timestamp">
            <column name="RESET_TIME" sql-type="timestamp" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
